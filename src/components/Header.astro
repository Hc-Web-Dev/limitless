---
const pathname = Astro.url.pathname;
---
  <nav class="navbar navbar-expand-lg ftco-navbar-light">
    <div class="container">
      <a class="navbar-brand aside-stretch d-flex align-items-center" href="/">
        <img src="/logo.svg" alt="Limitless Construction Logo" style="height: 80px; width: auto;" class="img-fluid">
      </a>
     <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="fa fa-bars"></span> Menu
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item"><a class={'nav-link ' + (pathname === "/" ? "active" : "")} href="/">Home</a></li>
        <li class="nav-item"><a class={'nav-link ' + (pathname === "/about" ? "active" : "")} href="/about">About</a></li>
        <li class="nav-item"><a class={'nav-link ' + (pathname === "/services" ? "active" : "")} href="/services">Services</a></li>
        <li class="nav-item"><a class={'nav-link ' + (pathname === "/project" ? "active" : "")} href="/project">Projects</a></li>
        <li class="nav-item"><a class={'nav-link ' + (pathname === "/blog" ? "active" : "")} href="/blog">Blog</a></li>
        <li class="nav-item"><a class={'nav-link ' + (pathname === "/contact" ? "active" : "")} href="/contact">Contact</a></li>
      </ul>
    </div>
  </div>
</nav>
