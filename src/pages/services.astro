---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Limitless Construction - Services">

  <section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_5.jpg');">
    <div class="overlay"></div>
    <div class="container">
      <div class="row no-gutters slider-text align-items-center justify-content-center">
        <div class="col-md-9 pt-5 text-center">
          <p class="breadcrumbs"><span class="me-2"><a href="/">Home <i class="fa fa-chevron-right"></i></a></span> <span>Services <i class="fa fa-chevron-right"></i></span></p>
          <h1 class="mb-0 bread">Our Services</h1>
        </div>
      </div>
    </div>
  </section>

  <section class="ftco-section ftco-services-section">
    <div class="container-xl">
      <div class="row justify-content-center mb-5">
        <div class="col-md-8 heading-section text-center" data-aos="fade-up" data-aos-duration="400">
          <span class="subheading">What We Offer</span>
          <h2 class="mb-4">Comprehensive Construction Solutions</h2>
          <p>From small repairs to major renovations, Limitless Construction covers all your property needs in Uitenhage, Port Elizabeth, and surrounding areas.</p>
        </div>
      </div>
      <div class="row">
        <!-- Service 1: Renovations -->
        <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="0" data-aos-duration="400">
          <div class="services d-flex">
            <div class="icon"><span class="flaticon-house"></span></div>
            <div class="text">
              <h2>Renovations</h2>
                <p class="mb-4">Complete home and office renovations, including concrete and packhouse floors, to transform your living or work space.</p>
            </div>
          </div>
        </div>
        <!-- Service 2: Building Alterations -->
        <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="50" data-aos-duration="400">
          <div class="services d-flex">
            <div class="icon"><span class="flaticon-construction"></span></div>
            <div class="text">
              <h2>Building Alterations</h2>
              <p class="mb-4">Structural changes, room additions, and modifications to improve your property's functionality.</p>
            </div>
          </div>
        </div>
        <!-- Service 3: Tiling -->
        <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="100" data-aos-duration="400">
          <div class="services d-flex">
            <div class="icon"><span class="flaticon-floor-plan"></span></div>
            <div class="text">
              <h2>Tiling</h2>
              <p class="mb-4">Professional tiling installation for floors, walls, kitchens, and bathrooms with precision.</p>
            </div>
          </div>
        </div>
        <!-- Service 4: Plumbing -->
        <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="0" data-aos-duration="400">
          <div class="services d-flex">
            <div class="icon"><span class="flaticon-engineer"></span></div>
            <div class="text">
              <h2>Plumbing</h2>
              <p class="mb-4">Expert plumbing installations, leak repairs, and general maintenance for your water systems.</p>
            </div>
          </div>
        </div>
        <!-- Service 5: Electrical -->
        <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="50" data-aos-duration="400">
          <div class="services d-flex">
            <div class="icon"><span class="flaticon-consult"></span></div>
            <div class="text">
              <h2>Electrical</h2>
              <p class="mb-4">Safe and reliable electrical repairs, installations, and maintenance services.</p>
            </div>
          </div>
        </div>
        <!-- Service 6: Maintenance -->
        <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="100" data-aos-duration="400">
          <div class="services d-flex">
            <div class="icon"><span class="flaticon-house-1"></span></div>
            <div class="text">
              <h2>General Maintenance</h2>
                <p class="mb-4">Everything from fixing broken fixtures to painting and ceilings to keep your property in top shape.</p>
            </div>
          </div>
        </div>
        <!-- Service 7: Steel Works -->
        <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="0" data-aos-duration="400">
          <div class="services d-flex">
            <div class="icon"><span class="flaticon-project"></span></div>
            <div class="text">
              <h2>Steel Works</h2>
              <p class="mb-4">Custom steel fabrication, gates, burglar bars, and other metalwork installations.</p>
            </div>
          </div>
        </div>
        <!-- Service 8: Paving -->
        <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="50" data-aos-duration="400">
          <div class="services d-flex">
            <div class="icon"><span class="flaticon-house-1"></span></div>
            <div class="text">
              <h2>Paving</h2>
              <p class="mb-4">High-quality paving solutions for driveways, walkways, and patios that last.</p>
            </div>
          </div>
        </div>
        <!-- Service 9: Waterproofing -->
        <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="100" data-aos-duration="400">
          <div class="services d-flex">
            <div class="icon"><span class="flaticon-construction"></span></div>
            <div class="text">
              <h2>Waterproofing</h2>
              <p class="mb-4">Protect your property from water damage with our expert sealing and roofing solutions.</p>
            </div>
          </div>
        </div>
         <!-- Service 10: Painting & Ceilings -->
         <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="0" data-aos-duration="400">
          <div class="services d-flex">
            <div class="icon"><span class="flaticon-consult"></span></div>
            <div class="text">
              <h2>Painting & Ceilings</h2>
              <p class="mb-4">Professional interior and exterior painting, ceiling installation, and repairs.</p>
            </div>
          </div>
        </div>
        <!-- Service 11: Handyman -->
        <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="50" data-aos-duration="400">
          <div class="services d-flex">
            <div class="icon"><span class="flaticon-engineer"></span></div>
            <div class="text">
              <h2>Handyman Work</h2>
              <p class="mb-4">Versatile assistance for all those odd jobs and small repairs around your residential or commercial property.</p>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </section>

</Layout>
