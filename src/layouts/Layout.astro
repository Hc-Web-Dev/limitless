---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Limitless Construction - Professional Construction & Renovation Services in Uitenhage and Eastern Cape">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Prata&display=swap" rel="stylesheet">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/4.5.6/css/ionicons.min.css">
    <link rel="stylesheet" href="/css/animate.css">
    <link rel="stylesheet" href="/css/flaticon.css">
    <link rel="stylesheet" href="/css/tiny-slider.css">
    <link rel="stylesheet" href="/css/glightbox.min.css">
    <link rel="stylesheet" href="/css/aos.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <Header />
    <slot />
    <Footer />

        <div id="cookie-notice" class="cookie-notice" role="dialog" aria-live="polite" aria-label="Cookie notice">
            <div class="cookie-notice__content">
                <p class="cookie-notice__text">We use cookies to improve your experience on our site. By using our site, you agree to our use of cookies.</p>
                <a class="cookie-notice__link" href="/privacy">Privacy Policy</a>
            </div>
            <button id="cookie-accept" class="cookie-notice__button" type="button">OK</button>
        </div>

    <a href="https://wa.me/27725923491" class="whatsapp-float" target="_blank" rel="noopener noreferrer">
        <i class="fa fa-whatsapp"></i>
    </a>

    <!-- Scripts -->
    <script is:inline src="/js/bootstrap.bundle.min.js"></script>
    <script is:inline src="/js/tiny-slider.js"></script>
    <script is:inline src="/js/glightbox.min.js"></script>
    <script is:inline src="/js/aos.js"></script>
    <!-- Google Maps - Commented out for dev safety -->
    <!-- <script is:inline src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script> -->
    <!-- <script is:inline src="/js/google-map.js"></script> -->
    <script is:inline src="/js/main.js"></script>
        <script is:inline>
            (function () {
                var storageKey = 'lc_cookie_consent';
                var notice = document.getElementById('cookie-notice');
                var acceptBtn = document.getElementById('cookie-accept');
                if (!notice || !acceptBtn) return;
                if (localStorage.getItem(storageKey) === 'accepted') {
                    notice.classList.add('is-hidden');
                    return;
                }
                acceptBtn.addEventListener('click', function () {
                    localStorage.setItem(storageKey, 'accepted');
                    notice.classList.add('is-hidden');
                });
            })();
        </script>
</body>
</html>
